        <mapping class="com.gtt.srs.entity.User"/>
        <mapping resource="com/gtt/srs/entity/User.hbm.xml"/>
        <mapping class="com.gtt.srs.entity.Antifraudtips"/>
        <mapping resource="com/gtt/srs/entity/Antifraudtips.hbm.xml"/>
        <mapping class="com.gtt.srs.entity.Sitenotice"/>
        <mapping resource="com/gtt/srs/entity/Sitenotice.hbm.xml"/>
        <mapping class="com.gtt.srs.entity.Successcase"/>
        <mapping resource="com/gtt/srs/entity/Successcase.hbm.xml"/>
        <mapping class="com.gtt.srs.entity.Message"/>
        <mapping resource="com/gtt/srs/entity/Message.hbm.xml"/>
        <mapping resource="com/gtt/srs/entity/Missingpersons.hbm.xml"/>
